
@{
    ViewBag.Title = "Dangky";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<table align="center">
    <h2 style="text-align:center">Đăng kí thành viên</h2>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:40px">
            <td>Họ và tên khách hàng:</td>
            <td>@Html.TextBox("Hoten")@ViewData["loi1"]</td>
        </tr>
        <tr style="height:40px">
            <td>Tên đăng nhập:</td>
            <td>@Html.TextBox("Tendn")@ViewData["loi2"]</td>
        </tr>
        <tr style="height:40px">
            <td>Mật khẩu: </td>
            <td>@Html.Password("Matkhau")@ViewData["loi3"]</td>
        </tr>
        <tr style="height:40px">
            <td>Nhập lại mật khẩu : </td>
            <td>@Html.Password("Matkhaunhaplai")@ViewData["loi4"]</td>
        </tr>
        <tr style="height:40px">
            <td>Email: </td>
            <td>@Html.TextBox("Email")@ViewData["Loi5"]</td>
        </tr>
        <tr style="height:40px">
            <td>Điện thoại </td>
            <td>@Html.TextBox("Dienthoai")@ViewData["loi6"]</td>
        </tr>
        <tr style="height:20px">
            <td>Ngày sinh:  </td>
            <td>
                <input type="date" name="Ngaysinh" />
            </td>
        </tr>
        <tr style="height:40px">
            <td></td>
            <td>
                <input type="submit" value="Đăng ký" />
            </td>
        </tr>
    }
</table>

